<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Bookers</a>
        </div>

        <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
         <li class="">
          <%= link_to user_path(current_user.id) do %>
           <span class="glyphicon glyphicon-home" aria-hidden="true">
           </span>Home
           <% end %>

         </li>

         <li class="">
          <%= link_to users_path do%>
           <span class="glyphicon glyphicon-user" aria-hidden="true"></span>User
           <% end %>
         </li>
         <li class="">
          <%= link_to books_path do %>
          <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books
          <% end %>
         </li>
         <li class="">
          <%= link_to destroy_user_session_path, method: :delete do %>
          <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>Logout
        <% end %>
        </li>
    <% else %>
         <li class="">
           <%= link_to "新規登録", new_user_registration_path %>
         </li>
         <li class="">
           <%= link_to "ログイン", new_user_session_path %>
         </li>
    <% end %>
  </ul>




      </div>
    </nav>
    <%= yield %>
  </body>
</html>
