<div class="container">
<div class=row>
	<%= render 'users/list', user: current_user, book: @book %>
<div class="col-xs-9">
  <h2>Users</h2>
    <table class="table table-hover table-inverse">
        <tr>
            <th>image</th>
            <th></th>
            <th>name</th>
            <th></th>
            <th></th>
        </tr>
         <% @users.each do |user| %>
        <tr>
            <th>
            <%= attachment_image_tag user, :profile_image, size: "30x30", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            </th>
            <th></th>
            <th align="left"><%= user.name %></th>
            <th></th>
            <th><%= link_to "Show", book_path(@booker.id) %></th>
        </tr>
         <% end %>
  </table>
</div>
</div>
</div>